/* MainMenu.uss - Styles for the main menu */

/* === Root Container === */

.main-menu-root {
    flex-grow: 1;
    background-color: rgb(18, 18, 24);
    align-items: center;
    justify-content: center;
}

/* === Menu Content (Centered) === */

.menu-content {
    align-items: center;
    justify-content: center;
    padding: 40px;
}

/* === Title Section === */

.title-section {
    align-items: center;
    margin-bottom: 8px;
}

.title-text {
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    letter-spacing: 4px;
}

.title-line1 {
    font-size: 56px;
    color: rgb(220, 220, 230);
}

.title-line2 {
    font-size: 64px;
    color: rgb(220, 220, 230);
    margin-top: -8px;
}

/* === Trivia Marquee (centered, replaces old tagline) === */

.trivia-marquee {
    font-size: 24px;
    color: rgb(0, 180, 150);
    -unity-font-style: italic;
    -unity-text-align: middle-center;
    margin-bottom: 32px;
    min-height: 30px;
    max-width: 500px;
    white-space: normal;
}

/* === Menu Buttons === */

.menu-buttons {
    align-items: center;
    min-width: 280px;
}

.menu-button {
    width: 100%;
    height: 50px;
    margin: 8px 0;
    padding: 12px 32px;
    font-size: 18px;
    border-radius: 8px;
    -unity-font-style: bold;
    transition-property: background-color, border-color, scale;
    transition-duration: 0.15s;
}

.menu-button:hover {
    scale: 1.02;
}

.menu-button:active {
    scale: 0.98;
}

/* Primary Buttons (Play Solo, Play Online) */

.menu-button.primary {
    background-color: rgb(0, 140, 120);
    border-color: rgb(0, 180, 150);
    border-width: 2px;
    color: rgb(255, 255, 255);
}

.menu-button.primary:hover {
    background-color: rgb(0, 160, 140);
}

.menu-button.primary:active {
    background-color: rgb(0, 120, 100);
}

/* Continue Game Button (highlighted when game in progress) */

.menu-button.continue-game {
    background-color: rgb(180, 120, 0);
    border-color: rgb(220, 160, 0);
    border-width: 2px;
    color: rgb(255, 255, 255);
}

.menu-button.continue-game:hover {
    background-color: rgb(200, 140, 0);
}

.menu-button.continue-game:active {
    background-color: rgb(160, 100, 0);
}

/* Secondary Buttons (Join Game, How to Play, Settings) */

.menu-button.secondary {
    background-color: rgb(40, 40, 50);
    border-color: rgb(70, 70, 85);
    border-width: 1px;
    color: rgb(180, 180, 190);
}

.menu-button.secondary:hover {
    background-color: rgb(50, 50, 62);
    border-color: rgb(90, 90, 105);
    color: rgb(220, 220, 230);
}

.menu-button.secondary:active {
    background-color: rgb(35, 35, 45);
}

/* Disabled button state */

.menu-button:disabled {
    opacity: 0.5;
    background-color: rgb(50, 50, 60);
    border-color: rgb(60, 60, 70);
    color: rgb(120, 120, 130);
}

.menu-button:disabled:hover {
    scale: 1;
    background-color: rgb(50, 50, 60);
}

/* === Inline Settings Section === */

.settings-section {
    margin-top: 32px;
    padding: 16px 24px;
    background-color: rgba(30, 30, 40, 0.6);
    border-radius: 8px;
    border-width: 1px;
    border-color: rgb(50, 50, 65);
    min-width: 280px;
}

.settings-row {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin: 6px 0;
    height: 32px;
}

.settings-icon {
    font-size: 13px;
    color: rgb(140, 140, 160);
    min-width: 50px;
    -unity-text-align: middle-left;
}

.settings-slider {
    flex-grow: 1;
    margin: 0 12px;
    min-width: 120px;
}

/* Slider track styling */
.settings-slider .unity-base-slider__dragger {
    background-color: rgb(0, 180, 150);
    border-radius: 6px;
    width: 14px;
    height: 14px;
    margin-top: -5px;
}

.settings-slider .unity-base-slider__tracker {
    background-color: rgb(60, 60, 75);
    border-radius: 2px;
    height: 4px;
}

.settings-slider .unity-base-slider__drag-container {
    min-height: 20px;
}

.settings-value {
    font-size: 13px;
    color: rgb(180, 180, 190);
    min-width: 40px;
    -unity-text-align: middle-right;
}

.checkbox-row {
    justify-content: flex-start;
    margin-top: 12px;
}

.settings-toggle {
    flex-direction: row-reverse;
}

.settings-toggle .unity-toggle__label {
    font-size: 13px;
    color: rgb(140, 140, 160);
    margin-left: 8px;
}

.settings-toggle .unity-toggle__checkmark {
    background-color: rgb(50, 50, 65);
    border-color: rgb(80, 80, 100);
    border-width: 1px;
    border-radius: 4px;
    width: 18px;
    height: 18px;
}

.settings-toggle:checked .unity-toggle__checkmark {
    background-color: rgb(0, 140, 120);
    border-color: rgb(0, 180, 150);
}

/* === Footer === */

.footer {
    position: absolute;
    bottom: 16px;
    right: 20px;
}

.version-label {
    font-size: 12px;
    color: rgb(80, 80, 100);
}

/* === Utility Classes === */

.hidden {
    display: none;
}
